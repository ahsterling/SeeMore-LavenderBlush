<h2>Account Page</h2>

<h3>Your Information</h3>

<div class = "row">
  <div class = "col-sm-6">
    <h4>Profile Information</h4>
    <table class = "table account-info" >
      <tr>
        <th>Name</th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th>Email</th>
        <td><%= @user.email %></td>
      </tr>
    </table>

  </div>

  <div class = "col-sm-6">
    <h4>Connected Accounts</h4>
    <% @providers.each do |provider| %>

      <% if provider.provider == "vimeo" %>
        <%= image_tag "vimeo-64.png", class: "active-credential vimeo img-circle" %>
      <% elsif provider.provider == "github" %>
        <%= image_tag "github-64.png", class: "active-credential github img-circle" %>
      <% elsif provider.provider == "instagram" %>
        <%= image_tag "instagram-64.png", class: "active-credential instagram img-circle" %>
      <% elsif provider.provider == "twitter" %>
        <%= image_tag "twitter-64.png", class: "active-credential twitter img-circle" %>
      <% end %>
    <% end %>

    <h4>Connect Other Accounts</h4>
    <% @other_providers.each do |provider| %>
      <% if provider == "vimeo" %>
        <%= image_tag "vimeo-64.png", class: "img-circle vimeo inactive" %>
      <% elsif provider == "github" %>
        <%= image_tag "github-64.png", class: "img-circle github inactive" %>
      <% elsif provider == "instagram" %>
        <%= image_tag "instagram-64.png", class: "img-circle instagram inactive" %>
      <% elsif provider == "twitter" %>
        <%= image_tag "twitter.png", class: "img-circle twitter inactive" %>
      <% end %>
    <% end %>
    
  </div>

</div>


<div class = "row">

  <div class ="col-sm-6">
    <table class = "table table-striped account-info" >
      <tr>
        <th colspan=3>Twitter Feeds:<th>
      </tr>
      <% @twitter_feeds.each do |feed| %>
        <%= render "feed_list", feed: feed %>
      <% end %>
    </table>
  </div>

  <div class = "col-sm-6">
    <table class = "table table-striped account-info" >
      <tr>
        <th colspan=3>Vimeo Feeds:</th>
      </tr>
      <% @vimeo_feeds.each do |feed| %>
        <%= render "feed_list", feed: feed %>
      <% end %>
    </table>
  </div>
</div>
