<tr class = "feed-wrapper">
  <td><%= image_tag feed.avatar, class: "img-circle" %></td>
  <td><%= feed.handle %></td>

  <td>
    <div class="unsubscribe-button">
      <%= form_tag user_feeds_path, method: :delete do %>
        <%= hidden_field_tag "delete_button[provider]", feed.provider %>
        <%= hidden_field_tag "delete_button[provider_uid]", feed.provider_uid %>
        <%= submit_tag "Unsubscribe", class: "btn btn-danger" %>
      <% end %>
    </div>
  </td>
</tr>
