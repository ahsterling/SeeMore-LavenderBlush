<%= form_tag search_path, class: "form-inline" do %>
  <%= text_field_tag :username, nil, class: "form-control" %>
  <%= hidden_field_tag :provider, "Vimeo" %>
  <%= submit_tag "Search Vimeo", class: "btn btn-default" %>
<% end %>

<!-- username refers to the search string and is what will be submitted to Vimeo -->
