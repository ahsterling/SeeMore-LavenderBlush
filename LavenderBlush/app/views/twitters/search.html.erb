
<% if @results.empty? %>
  <p>Sorry, no twitter users found! Try again: </p>

  <div class = "search-box">
    <%= form_tag twitter_search_path do %>
      <%= text_field_tag :username %>
      <%= submit_tag "Search Twitter" %>
    <% end %>
  </div>

  <div class="suggestions">
    <p>Looking for a suggestion?</p>
    <%= image_tag @bookis.profile_image_uri(size = :bigger) %>
    <%= link_to @bookis.screen_name, "#{@bookis.url}" %>
  </div>

<% end %>

<% @results.each do |result| %>
  <div class="result">
    <%= image_tag result.profile_image_uri(size = :bigger) %>
    <p><%= link_to result.screen_name, "#{result.url}" %></p>
    <p><%= result.description %></p>
    <p><%= result.location %></p>
    <p><%= result.followers_count %> followers</p>
  </div>
<% end %>
