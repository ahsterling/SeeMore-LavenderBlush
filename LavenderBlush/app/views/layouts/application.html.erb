<!DOCTYPE html>
<html>
<head>
  <title>LavenderBlush</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class = "search-box">
    <%= form_tag twitter_search_path do %>
      <%= text_field_tag :username %>
      <%= submit_tag "Search Twitter" %>
    <% end %>
  </div>

<%= yield %>

</body>
</html>
